@model IEnumerable<SixProject.Models.Department>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h1>Department List</h1>
        <div class="mb-2 d-flex justify-content-end">
            <a asp-action="Create" asp-controller="Department" class="btn btn-primary"><i class="fa fa-plus"></i> Add Department</a>
        </div>
        <table class="table table-striped table-bordered table-responsive">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(x=>x.DepartmentID)</th>
                    <th>@Html.DisplayNameFor(x=>x.DepartmentName)</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody class="table-light">
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x=>item.DepartmentID)</td>
                        <td>@Html.DisplayFor(x=>item.DepartmentName)</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.DepartmentID" class="btn btn-outline-info">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
