@model SixProject.Models.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col">
        <h1>Edit Department</h1>
        @if (ViewBag.msg != null)
        {
            <div class="alert alert-success display-6">@ViewBag.msg</div>
        }
        <div class="mb-2 d-flex justify-content-end">
            <a asp-action="Index" asp-controller="Department" class="btn btn-primary">
                <i class="fa fa-list-ul"></i>
                View List
            </a>
        </div>
        <form method="post" asp-action="Edit" asp-controller="Department">
            <input asp-for="DepartmentID" type="hidden" />
            <div class="row mb-2">
                <label asp-for="DepartmentID" class="col-2"></label>
                <div class="col-6">
                    <input type="text" readonly asp-for="DepartmentID" class="form-control" />
                </div>
            </div>
            
            <div class="row mb-2">
                <label asp-for="DepartmentName" class="col-2"></label>
                <div class="col-6">
                    <input type="text" asp-for="DepartmentName" class="form-control" />
                </div>

                <div class="col-4">
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-3 offset-2">
                    <button type="submit" class="btn btn-success">Save</button>

                </div>
            </div>
        </form>


    </div>

</div>